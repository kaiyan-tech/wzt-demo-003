{
  "name": "kaiyan-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "开沿 Monorepo - 基于 pnpm workspace 的前后端一体化项目",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter './apps/*' build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "lint": "pnpm --parallel --filter './apps/*' lint",
    "test": "pnpm --parallel --filter './apps/*' test",
    "typecheck": "pnpm --parallel --filter './apps/*' typecheck",
    "clean": "pnpm --parallel --filter './apps/*' clean && rm -rf node_modules",
    "prepare": "husky",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:logs": "docker compose logs -f postgres",
    "db:migrate": "pnpm --filter backend prisma:migrate:dev",
    "db:seed": "pnpm --filter backend prisma:seed",
    "db:studio": "pnpm --filter backend prisma:studio",
    "db:setup": "bash scripts/db-setup.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.48.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "esbuild",
      "prisma"
    ]
  }
}
